{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openmodbus.org/schema/v0.3.json",
  "title": "OpenModbus Device Register Map",
  "description": "Schema for OpenModbus Specification v0.3.0. SECURITY NOTE: Device profiles must contain only data (no executable code). YAML parsers must use safe mode to prevent arbitrary code execution.",
  "type": "object",
  "required": ["version", "device", "registers"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "0.3.0",
      "description": "Schema version (semver)"
    },
    "device": {
      "type": "object",
      "required": ["id", "manufacturer", "model", "protocol"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+$",
          "description": "Unique device identifier (snake_case with optional uppercase)"
        },
        "manufacturer": {
          "type": "string",
          "minLength": 1,
          "description": "Manufacturer name"
        },
        "model": {
          "type": "string",
          "minLength": 1,
          "description": "Device model number/name"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "protocol": {
          "type": "string",
          "enum": ["modbus_tcp", "modbus_rtu", "modbus_udp"],
          "description": "Modbus protocol variant"
        },
        "profile_version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Device profile version (semver: MAJOR.MINOR.PATCH)"
        },
        "default_byte_order": {
          "type": "string",
          "enum": ["ABCD", "BADC", "CDAB", "DCBA", "WORD_SWAP", "BYTE_SWAP", "FULL_SWAP"],
          "description": "Default byte order for multi-register numerics"
        },
        "default_register_type": {
          "type": "string",
          "enum": ["holding", "input", "coil", "discrete_input"],
          "description": "Default register type"
        },
        "tags": {
          "type": "object",
          "description": "Arbitrary key-value metadata"
        },
        "sources": {
          "type": "array",
          "description": "Documentation sources (datasheets, manuals, etc.)",
          "items": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "type": {
                "type": "string",
                "enum": ["datasheet", "manual", "website", "api_docs", "other"]
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "canonical_source": {
          "type": "string",
          "format": "uri",
          "description": "Vendor's official URL hosting this device profile (if available)"
        },
        "maintainers": {
          "type": "array",
          "description": "Maintainers responsible for this device profile",
          "items": {
            "type": "object",
            "required": ["github"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "Full name of maintainer"
              },
              "github": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,37}[a-zA-Z0-9])?$",
                "description": "GitHub username"
              },
              "organization": {
                "type": "string",
                "description": "Organization or company"
              },
              "email": {
                "type": "string",
                "format": "email",
                "description": "Contact email"
              },
              "role": {
                "type": "string",
                "enum": ["primary", "contributor", "emeritus"],
                "default": "contributor",
                "description": "Maintainer role"
              },
              "pgp_fingerprint": {
                "type": "string",
                "pattern": "^[A-F0-9]{40}$",
                "description": "PGP/GPG key fingerprint (40 hex chars) for signature verification"
              },
              "pgp_key_url": {
                "type": "string",
                "format": "uri",
                "description": "URL to public PGP key (fallback if WKD not available)"
              }
            }
          }
        },
        "signature": {
          "type": "object",
          "description": "Digital signature for vendor-maintained profiles",
          "properties": {
            "pgp": {
              "type": "string",
              "description": "Detached PGP signature of this file (base64-encoded)"
            },
            "signed_by": {
              "type": "string",
              "description": "Email address of signer (for WKD lookup)"
            },
            "signed_at": {
              "type": "string",
              "format": "date-time",
              "description": "Signature timestamp"
            }
          }
        }
      }
    },
    "registers": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "required": ["name", "type", "unit", "register_type"],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_]+$",
              "description": "Machine-safe identifier (snake_case with optional uppercase)"
            },
            "display_name": {
              "type": "string",
              "description": "Human-readable name from vendor documentation (optional)"
            },
            "type": {
              "type": "string",
              "enum": ["int8", "uint8", "int16", "uint16", "int32", "uint32", "int64", "uint64", "float32", "float64", "string", "bool"],
              "description": "Data type with signedness and bit-width encoded (e.g., int32, uint16, float32). For strings, length is required. For numeric types, length is optional and can be inferred from type."
            },
            "length": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of 16-bit registers. Required for string types (string byte capacity = length Ã— 2), optional for numeric types (inferred from type if not specified: int8/uint8/int16/uint16/bool=1, int32/uint32/float32=2, int64/uint64/float64=4)"
            },
            "byte_order": {
              "type": "string",
              "enum": ["ABCD", "BADC", "CDAB", "DCBA", "WORD_SWAP", "BYTE_SWAP", "FULL_SWAP"],
              "description": "Override device default byte order"
            },
            "unit": {
              "type": "string",
              "description": "SI unit or empty string"
            },
            "register_type": {
              "type": "string",
              "enum": ["holding", "input", "coil", "discrete_input"],
              "description": "Modbus register type"
            },
            "read_access": {
              "type": "boolean",
              "default": true,
              "description": "Whether register can be read"
            },
            "write_access": {
              "type": "boolean",
              "default": false,
              "description": "Whether register can be written"
            },
            "obis_code": {
              "type": "string",
              "description": "OBIS code if applicable"
            },
            "notes": {
              "type": "string",
              "description": "Free-text implementation notes"
            },
            "bits": {
              "type": "object",
              "patternProperties": {
                "^[0-9]+$": {
                  "type": "object",
                  "required": ["descriptive_name"],
                  "properties": {
                    "descriptive_name": {
                      "type": "string",
                      "pattern": "^[a-zA-Z0-9_]+$"
                    },
                    "vendor_name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Bitfield definitions for integer types"
            },
            "scaling": {
              "type": "object",
              "properties": {
                "factor": {
                  "type": "number"
                },
                "offset": {
                  "type": "number"
                }
              },
              "description": "Scaling factor and offset"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "string" } }
              },
              "then": {
                "required": ["length"],
                "not": {
                  "required": ["byte_order"]
                }
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "bool" } }
              },
              "then": {
                "properties": { "length": { "const": 1 } }
              }
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
